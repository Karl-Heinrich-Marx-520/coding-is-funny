#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>

typedef struct
{
	double chinese;
	double math;
	double english;
	double average;
}Score;

typedef struct
{
	char name[20];
	int age;
	Score score;
}Student;

void calculate_average(Student student[], int size)
{
	for (int i = 0; i < size; i++)
	{
		student[i].score.average = (student[i].score.chinese + student[i].score.math + student[i].score.english) / 3;
	}
}

int main()
{
	Student students[3] =
	{
		{"zhangsan", 18, {90.0, 85.0, 92.0}},
		{"lisi", 19, {88.0, 90.0, 86.0}},
		{"wangwu", 20, {95.0, 93.0, 90.0}}
	};
	calculate_average(students, 3);
	for (int i = 0; i < 3; i++)
	{
		printf("姓名：%s， 年龄：%d， 平均成绩：%.2lf\n", students[i].name, students[i].age, students[i].score.average);
	}

	return 0;
}

#include <iostream>
#include<vector>
using namespace std;
#define  MOD 1000000007;

int main()
{
	int n, m; cin >> n >> m;
	vector<vector<int>> dp(n + 1, vector<int>(m+1, 0));
	dp[1][1] = 1;
	for (int i = 2; i <= n; ++i)
		dp[i][1] = dp[i - 1][1];
	for (int j = 2; j <= m; ++j)
		dp[1][j] = dp[1][j - 1];
	for (int i = 2; i <= n; ++i)
		for (int j = 2; j <= m; ++j)
			dp[i][j] = (dp[i - 1][j] + dp[i][j - 1]) % MOD;
	cout << dp[n][m] << endl;
	return 0;

}

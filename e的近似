#include <iostream>
#include <cmath>
#include<iomanip>

using namespace std;

double Pow(int n)
{
    if (n == 1.0 || n == 0.0)
        return 1.0;
    else
        return n * Pow(n - 1);
}


int main()
{
    unsigned int n = 0;
    double sum = 0.0, pow = 0.0;
    cin >> n;
    for (int i = 0; i <= n; i++)
    {
        sum += 1 / Pow(i);
    }
    cout << fixed << setprecision(8) << sum << endl;

    return 0;
}
